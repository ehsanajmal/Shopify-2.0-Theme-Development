<div class="container">
  <div class="accordion accordion-flush" id="accordionFAQ">
    {% for block in section.blocks %}
    <div class="accordion-item">
      <h2 class="accordion-header" id="collapse-header-{{ block.id }}">
          <button 
           class="accordion-button collapsed "
           type="button" 
           data-bs-toggle="collapse" 
           data-bs-target= "#collpase-{{ block.id }}"
           aria-expanded="false"
           aria-controls="{{ block.id }}"
           >{{ block.settings.title }}</button>   
      </h2>
      <div class="accordion-collapse collapse py-3"
       id="collapse-{{ block.id }}" 
       aria-labelledby="collapse-header-{{ block.id }}"
       data-bs-parent="#accordionFAQ"
       >
       {{ block.settings.answer }}
      </div>
    </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
    "name": "FAQ",
    "blocks": [
    {
       "name": "FAQ Items",
       "type": "faq",
      "settings": [
      {
         "type": "text",
         "id": "title",
         "label": "Title",
         "default": "FAQ Title Example"
      },
      {
          "type": "richtext",
          "id": "answer",
          "label": "Answer"
      }
    ]
    }
    ]
 }
 {% endschema %}