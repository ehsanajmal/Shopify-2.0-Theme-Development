<section class="container py-4">
  <h2 class="text-center my-3">{{ section.settings.title }}</h2>
  <div class="row">
    {% for product in collections[section.settings.featured_collection].products
    %} {% assign image = product.featured_media.preview_image %}

    <div class="col">
      <div class="card" style="width: 15rem">
        {% if image != blank %}

        <img
          class="card-img-top"
          src="{{ image | img_url: 'medium' }}"
          alt="{{ product.title }}"
        />
        {% else %}
        {{ "product-1" | placeholder_svg_tag: "card-img-top" }}

        {% endif %}

        <div class="card-body">
          <h3 class="product-title">
            <a class="p-t" href="{{ product.url }}">{{ product.title }}</a>
          </h3>
          <p class="p-p">{{ product.price | money_without_trailing_zeros }}</p>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</section>

{% schema %} { "name": "Featured Collection", "class":
"featured-collection-section", "settings": [ { "type": "collection", "id":
"featured_collection", "label": "Collection" }, { "type": "text", "id": "title",
"default": "Featured Collection", "label": "Ticket" } ], "presets": [ {
"category": "Collection", "name":"Featured Collection" } ] } {% endschema %}
